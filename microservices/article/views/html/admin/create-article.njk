<div class="row">
  <div class="info-panel">
    <i class="fa fa-pencil fa-2x"></i>
    <span>Добавляем статью.</span>
  </div>

  <div id="article-add" class="container-fluid">
    <form action="" id="article" class="">
      <div class="row">
        {#  #}
        <div class="article-title col-lg-9">
          <div class="form-group">
            <label for="article-title">Заголовок статьи</label>
            <input class="form-control form-cascade-control" id="article-title" type="text" name="title" required />
          </div>
          {# Раздел и автор #}
          <div id="selection" class="form-group">
            <label>Категория:</label>
            <select class="sections" name="section" id="sections">
              <option value="0">Выберите категорию</option>
            </select>
            <label>Автор:</label>
            <select class="" name="autor" id="autor">
              <option value="0">Выберите автора</option>
              {% asyncAll user in users %}
              <option value="{{ user }}">{{ user.username }}</option>
              {% endall %}
            </select>
          </div>
          {# редактор #}
          <div class="article-editor">
            <div class="form-group">
              <label>Статья:</label>
              <textarea id="post-article" class="form-control form-cascade-control " name="article"
                rows="15"></textarea>
            </div>
          </div>

          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" id="images-upload-tab" data-toggle="tab" href="#images-upload" role="tab"
                aria-controls="images-upload" aria-selected="true">Загрузка фото</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile"
                aria-selected="false">Profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact"
                aria-selected="false">Contact</a>
            </li>
          </ul>

          <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="images-upload" role="tabpanel"
              aria-labelledby="images-upload-tab">

              <div id="dropzone">
                <form action="/images/upload" id="my-dropzone" class="dropzone" enctype="multipart/form-data">
                <noscript>
                <input type="file" name="foo" accept="application/msword, application/vnd.ms-excel, application/vnd.ms-powerpoint, text/plain, application/pdf, image/*" multiple>
                </noscript>
                </form>
              </div>


