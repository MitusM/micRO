            </div>

            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab"></div>

            <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab"></div>
          </div> {# tab #}


        </div>

        {# дополнительные #}
        <div id="panel" class="col-lg-3">
          <div class="form-group">
            <label>URL страницы:</label>
            <input class="form-control form-cascade-control" type="text" name="url" />
          </div>

          <div class="form-group">
            <label>Описание страницы (description):</label>
            <textarea class="mceNoEditor form-control form-cascade-control" id="input_desc" name="description" rows="5"
              required="required"></textarea>
          </div>

          <div class="form-group">
            <label>Ключевые слова (keywords):</label>
            <textarea class="mceNoEditor form-control form-cascade-control" id="input_key" name="keyword" rows="3"
              required="required"></textarea>
          </div>

          {# кнопки #}
          <div class="form-group switch d-flex">
            <div class="checkbox">
              <label>Опубликовать статью.</label>
              <input class="js-switch" type="checkbox" name="publish" id="publish" data-switchery="true" />
            </div>

            <div class="checkbox">
              <label>Показывать в новых статьях.</label>
              <input class="js-switch" type="checkbox" name="view_new_articles" id="view" data-switchery="true" />
            </div>

            <div class="checkbox">
              <label>Разрешить комментарии.</label>
              <input class="js-switch" type="checkbox" name="comments" id="comments" data-switchery="true" />
            </div>

            <div class="checkbox">
              <label>Разрешить рейтинг.</label>
              <input class="js-switch" type="checkbox" name="poll" id="poll" data-switchery="true" />
            </div>

          </div>


        </div>

        <button class="d-inline-flex btn btn-primary btn-lg" value="true" type="submit" name="submitbtn"
          id="form-article-button__add">Сохранить</button>
        {# <button name="submitbtn"></button> #}
    </form>
  </div>
</div>